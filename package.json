{
    "name": "apollosystems",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "serve": "php artisan serve",
        "websocket": "php artisan websockets:serve",
        "dev": "nuxi dev",
        "git:clean": "git checkout develop && git branch -vv | grep ': gone]'|  egrep -v '(^\\*|master|main|develop)' | awk '{ print $1; }' | xargs -r git branch -D",
        "styleguide": "cross-env vue-styleguidist server",
        "siege": "node ./siege/siege.js",
        "build": "nuxi build",
        "styleguide:build": "cross-env vue-styleguidist build",
        "start": "nuxi preview",
        "generate": "node --max-old-space-size=4096 node_modules/nuxt/bin/nuxt.js generate",
        "lint:js": "eslint --ext .ts,.js,.vue --ignore-path .gitignore .",
        "lint:style": "stylelint **/*.{vue,css} --ignore-path .gitignore",
        "lint": "npm run lint:js && npm run lint:style",
        "lintfix": "eslint --fix --ext .js,.jsx,.ts,.tsx,.vue --ignore-path .gitignore . && stylelint --fix **/*.{vue,css} --ignore-path .gitignore",
        "prepare": "husky install",
        "android": "node --max-old-space-size=4096 node_modules/nuxt/bin/nuxt.js generate -s && cd dist && del /S *.gz && del /S *.br & cd .. && npx cap copy android && npx cap open android",
        "ios": "node --max-old-space-size=4096 node_modules/nuxt/bin/nuxt.js generate -s && cd dist && find . -name '*.gz' -delete && find . -name '*.br' -delete && cd .. && npx cap copy ios && npx cap open ios"
    },
    "dependencies": {
        "@nuxtjs/apollo": "^4.0.1-rc.5",
        "@vue/apollo-composable": "^4.0.0-alpha.17",
        "graphql-tag": "^2.12.6",
        "nuxt-edge": "latest"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.0.0",
        "@commitlint/config-conventional": "^17.0.0",
        "@mdi/js": "^6.9.96",
        "@nuxt/bridge": "npm:@nuxt/bridge-edge",
        "@nuxtjs/eslint-config-typescript": "^9.0.0",
        "@nuxtjs/eslint-module": "^3.1.0",
        "@nuxtjs/stylelint-module": "^4.1.0",
        "@nuxtjs/vuetify": "^1.12.3",
        "@vue/test-utils": "^1.3.0",
        "cross-env": "^7.0.2",
        "encoding": "^0.1.13",
        "eslint": "^8.19.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-nuxt": "^3.2.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.1",
        "lint-staged": "^12.5.0",
        "prettier": "^2.7.1",
        "stylelint": "^14.9.1",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-recommended-vue": "^1.4.0",
        "stylelint-config-standard": "^22.0.0",
        "stylelint-config-standard-scss": "^3.0.0",
        "ts-loader": "^8.4.0",
        "typescript": "^4.6.3",
        "vue-template-babel-compiler": "^1.2.0"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown",
        "*.{js,jsx,ts,tsx,vue}": "eslint --fix --ignore-path .gitignore",
        "*.{css,scss,vue}": "stylelint --fix --ignore-path .gitignore",
        "**/*.php": "composer lintfix"
    }
}
